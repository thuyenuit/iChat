<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
android:layout_height="match_parent">

<RelativeLayout
    android:id="@+id/profile"
    android:layout_height="match_parent"
    android:background="@color/grey_100"
    app:layout_aspectRatio="150%"
    app:layout_widthPercent="100%">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="474dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="35dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/img_avatar_info"
            android:layout_width="164dp"
            android:layout_height="159dp"
            android:layout_gravity="center"
            android:background="#00000000"
            android:src="@drawable/default_avata" />

        <TextView
            android:id="@+id/txtName_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:text="Nguyễn Văn Thuyền"
            android:textColor="@android:color/black"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/txtGender_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="Giới tính: Nam"
            android:layout_gravity="center"
            android:textColor="@color/common_google_signin_btn_text_dark_focused"
            android:textSize="16sp" />


        <Button
            android:id="@+id/btnSendRequest"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginEnd="100dp"
            android:layout_marginStart="100dp"
            android:layout_marginTop="40dp"
            android:background="@drawable/border_button"
            android:textAllCaps="false"
            android:textColor="#fff"
            android:text="Gửi yêu cầu kết bạn" />

        <Button
            android:id="@+id/btnCancelRequest"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginEnd="100dp"
            android:layout_marginStart="100dp"
            android:layout_marginTop="10dp"
            android:textAllCaps="false"
            android:textColor="#fff"
            android:background="@drawable/border_button2"
            android:text="Hủy yêu cầu kết bạn" />

    </LinearLayout>
</RelativeLayout>
</android.support.percent.PercentRelativeLayout>